#include<stdio.h>
#include<stdlib.h>
typedef unsigned char u8;
typedef unsigned int u32;


int main()
{
    u8 number_of_students;
    printf("Enter number of students: ");
    scanf("%d", &number_of_students);
    u32* grades = (u32*)malloc(number_of_students * sizeof(u32));


    u32 avg = 0;
    for(u8 i=0;i < number_of_students;i++)
    {
        printf("Enter grade for student %d: ", i + 1);
        scanf("%d", &grades[i]);
        avg += grades[i];
    }
    u32 avg_t=avg / number_of_students;

    printf("Average grade: %d\n", avg_t);
    printf("Add another two students grade: ");
    grades = (u32*)realloc(grades, (number_of_students + 2) * sizeof(u32));
    u32 new_grades[2];
    u32 new_avg = 0;
    for (u8 i = 0; i < 2; i++) {
        scanf("%d", &new_grades[i]);
        new_avg += new_grades[i];
    }
    
    grades[number_of_students] = new_grades[0];
    grades[number_of_students + 1] = new_grades[1];

    u32 avg_total = (avg + new_avg)/(number_of_students + 2);
    printf("New average grade: %d\n", avg_total);

    free(grades);
    return 0;
}
